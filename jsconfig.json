{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "ESNext",
      "module": "NodeNext",
      "noEmit": true,
      "lib": [
          "DOM",
          "ES2020"
        ],
        "moduleResolution": "NodeNext",
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "React.Fragment",
        "jsxImportSource": "react"
      },
    "exclude": ["dist/*"],
    "include": ["src/index.js", "src/**/*", "node_modules/*"]
}